    #mission {
        flex-direction: column;
        text-align: center;
    }
    
    #content {
        padding-right: 0;
        margin-bottom: 2rem;
    }
    
    #welcome_el1 h1 {
        font-size: 2rem;
    }
    
    nav {
        flex-direction: column;
        gap: 1rem;
    }
    
    .table-container {
        padding: 1rem;
        overflow-x: auto;
